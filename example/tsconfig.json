{
    "compilerOptions": {
        "moduleResolution": "node",
        "outDir": "dist",
        "lib": ["es6"],
        "noImplicitAny": true,
        "experimentalDecorators": true,
        "inlineSourceMap": true,
        "downlevelIteration": true,
        "declaration": true
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}